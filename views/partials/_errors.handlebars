{{#if error}}
<div class="alert alert-danger text-center">
    <button type="button" class="close" data-dismiss="alert">
    &times;
  </button>
  <p>
    {{error}}
  </p>
</div>
{{/if}}

{{#each errors}}
<div class="alert alert-danger text-center">
  <button type="button" class="close" data-dismiss="alert">
    &times;
  </button>
  <p>
    {{text}}
  </p>
</div>
{{else}}
{{/each}}